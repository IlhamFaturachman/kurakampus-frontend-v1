# Environment Variables Template
# Copy this file to .env.local and update with your values

# ============================================
# Backend API Configuration (NestJS)
# ============================================
# Base URL for your NestJS backend API
VITE_API_BASE_URL=http://localhost:3000/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# API version (if your backend uses versioned APIs)
VITE_API_VERSION=v1

# Enable API request retries on failure
VITE_API_RETRY_ENABLED=true
VITE_API_RETRY_COUNT=3
VITE_API_RETRY_DELAY=1000

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=KuraKampus
VITE_APP_VERSION=1.0.0
VITE_STORAGE_PREFIX=kurakampus_

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_LOGGING=true
VITE_ENABLE_MOCKING=false

# ============================================
# Security Configuration
# ============================================
VITE_ENABLE_CSRF=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# ============================================
# Authentication (JWT)
# ============================================
# Token refresh settings
VITE_AUTH_REFRESH_BEFORE_EXPIRY=300000
VITE_AUTH_TOKEN_TYPE=Bearer

# ============================================
# CORS Settings (for development)
# ============================================
VITE_CORS_ENABLED=true
VITE_CORS_ORIGIN=http://localhost:3000

# ============================================
# Development & Debugging
# ============================================
# Show detailed error messages in development
VITE_SHOW_ERROR_DETAILS=true

# Enable Redux DevTools or Vue DevTools integration
VITE_ENABLE_DEVTOOLS=true
